{
  "platformAware": false,
  "routing": {
    "initial": "login",
    "default": {
      "onSuccess": "_dismiss"
    }
  },
  "screens": {
    "login": {
      "routing": {
        "onPendingRegistration": "account-update",
        "onSuccess": "_dismiss"
      },
      "action": "login",
      "appBar": {
        "textKey": "Login",
        "style": {
          "fontColor": "white",
          "background": "#000000"
        }
      },
      "stack": "vertical",
      "style": {
        "background": "https://image.freepik.com/free-vector/abstract-galaxy-background_1199-247.jpg"
      },
      "children": [
        {
          "type": "label",
          "textKey": "login in with your email and password:",
          "style": {
            "padding": 50,
            "fontSize": 50,
            "fontColor": "#BCBCBC",
            "fontWeight": 1
          }
        },
        {
          "bind": "loginID",
          "type": "emailInput",
          "textKey": "Email",
          "theme": "input",
          "style": {
            "borderColor": "white",
            "borderSize": 1,
            "fontColor": "white",
            "cornerRadius": 10
          }
        },
        {
          "bind": "password",
          "type": "passwordInput",
          "textKey": "Password",
          "style": {
            "borderColor": "white",
            "borderSize": 1,
            "fontColor": "white",
            "cornerRadius": 10
          }
        },
        {
          "type": "submit",
          "textKey": "Submit",
          "style": {
            "background": "#000000",
            "padding": 50,
            "fontSize": 50,
            "fontColor": "#BCBCBC",
            "fontWeight": 1,
            "elevation": 2,
            "cornerRadius": 10
          }
        }
      ]
    },
    "register": {
      "routing": {
        "onPendingRegistration": "account-update",
        "onSuccess": "_dismiss"
      },
      "action": "register",
      "appBar": {
        "textKey": "Register"
      },
      "stack": "vertical",
      "children": [
        {
          "type": "label",
          "textKey": "Register with site credentials:"
        },
        {
          "bind": "email",
          "type": "emailInput",
          "textKey": "Email"
        },
        {
          "bind": "password",
          "type": "passwordInput",
          "textKey": "Password"
        },
        {
          "type": "container",
          "stack": "horizontal",
          "alignment": "start",
          "children": [
            {
              "bind": "profile.firstName",
              "type": "textInput",
              "textKey": "First name"
            },
            {
              "bind": "profile.lastName",
              "type": "textInput",
              "textKey": "Last name"
            }
          ]
        },
        {
          "bind": "data.terms",
          "type": "checkbox",
          "textKey": "i have read and understood the terms of use"
        },
        {
          "type": "dropdown",
          "bind": "data.favGuitar",
          "options": [
            {
              "default": true,
              "value": "PRS",
              "textKey": "Paul Reed Smith"
            },
            {
              "value": "Rubato",
              "textKey": "Rubato"
            },
            {
              "value": "Parker",
              "textKey": "Parker Guitars"
            }
          ]
        },
        {
          "type": "radio",
          "bind": "data.favGuitar",
          "options": [
            {
              "default": true,
              "value": "PRS",
              "textKey": "Paul Reed Smith"
            },
            {
              "value": "Rubato",
              "textKey": "Rubato"
            },
            {
              "value": "Parker",
              "textKey": "Parker Guitars"
            }
          ]
        },
        {
          "type": "submit",
          "textKey": "Submit"
        }
      ]
    },
    "account-update" : {
      "routing": {
        "onSuccess": "_dismiss"
      },
      "action": "setAccount",
      "appBar": {
        "textKey": "Account Information"
      },
      "stack": "vertical",
      "children": [
        {
          "bind": "profile.firstName",
          "type": "textInput",
          "textKey": "First name"
        },
        {
          "bind": "profile.lastName",
          "type": "textInput",
          "textKey": "Last name"
        },
        {
          "bind": "profile.email",
          "type": "textInput",
          "textKey": "Email"
        },
        {
          "bind": "profile.zip",
          "type": "textInput",
          "textKey": "Zipcode"
        },
        {
          "bind": "profile.country",
          "type": "textInput",
          "textKey": "Country"
        },
        {
          "type": "submit",
          "textKey": "Submit"
        }
      ]
    }
  }
}
