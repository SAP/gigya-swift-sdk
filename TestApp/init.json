{
  "platformAware": false,
  "theme": {
    "primaryColor": "blue",
    "secondaryColor": "white",
    "textColor": "black",
    "enabledColor": "blue",
    "disabledColor": "grey",
    "errorColor": "red",
    "title": {
      "fontWeight": "bold",
      "fontSize": 22
    },
    "subtitle": {
      "fontSize": 16
    },
    "input": {
      "margin": 5
    },
    "flatButton": {
      "fontSize": 14,
      "fontColor": "white",
      "fontWeight": 6,
      "elevation": 2,
      "background": "blue",
      "size": [
        220,
        44
      ]
    },
    "raisedButton": {
      "fontSize": 14,
      "fontColor": "white",
      "fontWeight": 4,
      "elevation": 4,
      "background": "blue",
      "size": [
        300,
        40
      ]
    }
  },
  "routing": {
    "initial": "register",
    "default": {
      "onSuccess": "_dismiss"
    }
  },
  "screens": {
    "login": {
      "routing": {
        "onPendingRegistration": "account-update",
        "onSuccess": "_dismiss"
      },
      "action": "login",
      "appBar": {
        "textKey": "Login"
      },
      "children": [
        {
          "type": "container",
          "stack": "horizontal",
          "alignment": "start",
          "style": {
            "margin": 0
          },
          "children": [
            {
              "type": "label",
              "textKey": "login in with your email and password:",
              "theme": "subtitle"
            }
          ]
        },
        {
          "bind": "loginID",
          "type": "emailInput",
          "textKey": "Email",
          "theme": "input",
          "validations": {
            "required": {
              "enabled": true,
              "errorKey": "This field is required"
            },
            "regex": {
              "enabled": true,
              "value": "^[a-zA-Z0-9.a-zA-Z0-9.!#$%&'*+-/=?^_`{|}~]+@[a-zA-Z0-9]+\\.[a-zA-Z]+",
              "errorKey": "Invalid email format"
            }
          }
        },
        {
          "bind": "password",
          "type": "passwordInput",
          "textKey": "Password",
          "theme": "input",
          "validations": {
            "required": {
              "enabled": true,
              "errorKey": "This field is required"
            }
          }
        },
        {
          "type": "label",
          "textKey": "I don't have an account. [Register](register)",
          "style": {
            "margin": [
              0,
              24,
              0,
              16
            ]
          }
        },
        {
          "type": "submit",
          "textKey": "Submit",
          "theme": "raisedButton"
        }
      ]
    },
    "register": {
      "routing": {
        "onPendingRegistration": "account-update",
        "onSuccess": "_dismiss"
      },
      "action": "register",
      "appBar": {
        "textKey": "Register"
      },
      "stack": "vertical",
      "children": [
        {
          "type": "container",
          "stack": "horizontal",
          "alignment": "start",
          "style": {
            "margin": 0
          },
          "children": [
            {
              "type": "label",
              "textKey": "Register with your email and password:"
            }
          ]
        },
        {
          "bind": "email",
          "type": "emailInput",
          "textKey": "Email",
          "theme": "input"
        },
        {
          "type": "container",
          "stack": "horizontal",
          "alignment": "start",
          "style": {
            "margin": 0
          },
          "children": [
            {
              "bind": "profile.firstName",
              "type": "textInput",
              "textKey": "First name",
              "theme": "input"
            },
            {
              "bind": "profile.lastName",
              "type": "textInput",
              "textKey": "Last name",
              "theme": "input"
            }
          ]
        },
        {
          "bind": "password",
          "type": "passwordInput",
          "textKey": "Password",
          "theme": "input"
        },
        {
          "type": "label",
          "textKey": "Already registered? [Login](login)",
          "style": {
            "margin": [
              0,
              26,
              0,
              16
            ]
          }
        },
        {
          "bind": "data.terms",
          "type": "checkbox",
          "textKey": "I have read and understood these [terms of use](https://www.google.com)",
          "style": {
            "margin": 0
          }
        },
        {
          "type": "submit",
          "textKey": "Submit",
          "theme": "raisedButton"
        }
      ]
    },
    "account-update": {
      "routing": {
        "onSuccess": "_dismiss"
      },
      "action": "setAccount",
      "appBar": {
        "textKey": "Account Information"
      },
      "stack": "vertical",
      "children": [
        {
          "bind": "profile.firstName",
          "type": "textInput",
          "textKey": "First name",
          "theme": "input"
        },
        {
          "bind": "profile.lastName",
          "type": "textInput",
          "textKey": "Last name",
          "theme": "input"
        },
        {
          "bind": "profile.email",
          "type": "textInput",
          "textKey": "Email",
          "theme": "input"
        },
        {
          "bind": "profile.zip",
          "type": "textInput",
          "textKey": "Zipcode",
          "theme": "input"
        },
        {
          "type": "submit",
          "textKey": "Submit",
          "theme": "raisedButton",
          "style": {
            "margin": [
              0,
              100,
              0,
              0
            ]
          }
        }
      ]
    }
  }
}
